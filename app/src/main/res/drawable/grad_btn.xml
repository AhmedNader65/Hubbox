<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/_8sdp"/>
            <gradient
                android:angle="360"
                android:startColor="@color/quantum_pink"
                android:endColor="#3F51B5"
                android:centerColor="#CDFFCF"
                android:type="linear" />
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>

    <item

        android:bottom="0.4dp"
        android:left="0.4dp"
        android:right="0.4dp"
        android:top="0.4dp">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/_8sdp"/>
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>