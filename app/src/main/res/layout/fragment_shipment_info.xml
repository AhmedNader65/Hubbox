                        android:layout_weight="1"
                        android:textAlignment="center"
                        app:autoSizeTextType="uniform"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textColor="@color/purple" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

