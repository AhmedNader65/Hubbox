<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5E5E5"
    android:padding="@dimen/_12sdp"
    tools:context=".ui.home.myorders.OrderQrCcodeFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:id="@+id/back"/>
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="QR code"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/delivery_black"/>

    <ImageView
        android:id="@+id/qrgenerated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/header_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/placeholder_qr"
        android:layout_marginTop="@dimen/_40sdp"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@+id/qrgenerated"
        app:layout_constraintEnd_toEndOf="@id/qrgenerated"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/qrgenerated"
        android:orientation="horizontal">



        <LinearLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sharee"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_marginTop="4sp"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_download"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="4sp"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/copy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_copyy"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy"
                android:layout_marginTop="4sp"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"/>


        </LinearLayout>
    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>