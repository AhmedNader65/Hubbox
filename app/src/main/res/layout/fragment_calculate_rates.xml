<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F8FB">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/CalculateRates"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_24sdp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_top_round_white"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_16sdp"
                android:paddingEnd="@dimen/_12sdp">


                <ImageView
                    android:id="@+id/purpledot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_purple_dot"
                    app:layout_constraintBottom_toBottomOf="@+id/shippingtxt"
                    app:layout_constraintEnd_toEndOf="@+id/pinkdot"
                    app:layout_constraintStart_toStartOf="@+id/pinkdot"
                    app:layout_constraintTop_toTopOf="@+id/shippingtxt" />

                <TextView
                    android:id="@+id/shippingtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/shoppingfrom"
                    android:textColor="@color/purple"
                    app:layout_constraintStart_toEndOf="@+id/purpledot"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/countrycityfrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_round_grey_stroke"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_16sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/shippingtxt"
                    app:layout_constraintTop_toBottomOf="@+id/shippingtxt">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/countryfromLin"
                        >
                        <TextView
                            android:id="@+id/countryfrom"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="Select country, pickup point"
                            android:textColor="@color/grey_70" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/ic_baseline_arrow_drop_down_24"
                            android:layout_gravity="left"
                            android:foregroundGravity=""
                            />

                    </LinearLayout>





                    <View
                        android:id="@+id/middle1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/countryfromLin" />


                    <LinearLayout
                        android:id="@+id/cityfromlin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/middle1">

                        <TextView
                            android:id="@+id/cityfromtv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Select country, pickup point"
                            android:textColor="@color/grey_70"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/cityfrom" />


                    </LinearLayout>




                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/pinkdot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hollow_foshia_dot"
                    app:layout_constraintBottom_toBottomOf="@+id/shippingto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/shippingto" />

                <TextView
                    android:id="@+id/shippingto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/shippingto"
                    android:textColor="@color/purple"
                    app:layout_constraintStart_toEndOf="@+id/pinkdot"
                    app:layout_constraintTop_toBottomOf="@+id/countrycityfrom" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/pinkdot"
                    app:layout_constraintEnd_toEndOf="@+id/pinkdot"
                    app:layout_constraintStart_toStartOf="@+id/pinkdot"
                    app:layout_constraintTop_toBottomOf="@+id/purpledot">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_grey_dot" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_grey_dot" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_grey_dot" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_grey_dot" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/countrycityto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_round_grey_stroke"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_16sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/shippingto"
                    app:layout_constraintTop_toBottomOf="@+id/shippingto">


                    <LinearLayout
                        android:id="@+id/countrytolin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/couuntryto"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="Select country, pickup point"
                            android:textColor="@color/grey_70"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/couuntryto" />

                    </LinearLayout>





                    <View
                        android:id="@+id/middle2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/countrytolin" />



                    <LinearLayout
                        android:id="@+id/citytolin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/middle2"
                        android:layout_marginTop="@dimen/_12sdp">
                        <TextView
                            android:id="@+id/citytotv"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="Select country, pickup point"
                            android:textColor="@color/grey_70" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/cityto" />

                    </LinearLayout>




                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/locaic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    app:layout_constraintBottom_toBottomOf="@+id/countrycityto"
                    app:layout_constraintEnd_toEndOf="@+id/pinkdot"
                    app:layout_constraintStart_toStartOf="@+id/pinkdot" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/locaic"
                    app:layout_constraintEnd_toEndOf="@+id/pinkdot"
                    app:layout_constraintStart_toStartOf="@+id/pinkdot"
                    app:layout_constraintTop_toBottomOf="@+id/pinkdot">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_grey_dot" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_grey_dot" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_grey_dot" />
                </LinearLayout>


                <TextView
                    android:id="@+id/selecttype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/SelectShipmentType"
                    android:textColor="@color/purple"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/countrycityto" />


                <LinearLayout
                    android:id="@+id/conshipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/selecttype">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/document"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_round_green_light"
                            app:contentPadding="@dimen/_8sdp">

                            <LinearLayout
                                android:id="@+id/homeContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_doc" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Doc"
                                    android:textColor="@color/purple" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/parcell"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_round_purpl_light"
                            app:contentPadding="@dimen/_8sdp"

                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:id="@+id/workContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_parcel" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Parcel"
                                    android:textColor="@color/purple" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/recovery"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_round_pink_light"
                            app:contentPadding="@dimen/_8sdp">

                            <LinearLayout
                                android:id="@+id/moreContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_truck_recovery" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="1"
                                    android:text="Recovery"
                                    android:textColor="@color/purple" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/Moving"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@drawable/bg_round_orange_light"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="0dp"
                            app:contentPadding="@dimen/_8sdp"
                            app:layout_constraintEnd_toStartOf="@+id/more"
                            app:layout_constraintStart_toEndOf="@+id/document"
                            app:layout_constraintTop_toTopOf="parent"
                            app:strokeWidth="0dp">

                            <LinearLayout
                                android:id="@+id/MovingContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_moving_truck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Moving"
                                    android:textColor="@color/purple" />
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:id="@+id/DeliveryType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/DeliveryType"
                    android:textColor="@color/purple"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/conshipment" />


                <LinearLayout
                    android:id="@+id/deliverylin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/DeliveryType">


                    <LinearLayout
                        android:id="@+id/Expresslin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_with_stroke"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">


                        <TextView
                            android:id="@+id/exptitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Express"
                            android:textColor="@color/delivery_black" />

                        <TextView
                            android:id="@+id/expdesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text=" 3 hours"
                            android:textColor="@color/delivery_black"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Standardlin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_with_stroke"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">


                        <TextView
                            android:id="@+id/standardtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Standard"
                            android:textColor="@color/delivery_black" />

                        <TextView
                            android:id="@+id/standarddesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="1 Day"
                            android:textColor="@color/delivery_black"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Customizelin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_with_stroke"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">


                        <TextView
                            android:id="@+id/customizetxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:text="Customize"
                            android:textColor="@color/delivery_black" />

                        <TextView
                            android:id="@+id/customizedesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="Set"
                            android:textColor="@color/delivery_black"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/weightlin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/DeliveryType">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/weightTF"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_weight="3"
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp"
                        app:boxStrokeWidth="0.7dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/additionalsLB">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_medium"
                            android:hint="0.0"
                            android:inputType="numberSigned" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/KGTF"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:layout_weight="1"
                        app:boxBackgroundColor="@color/white"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp"
                        app:boxStrokeWidth="0.7dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/additionalsLB">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_medium"
                            android:inputType="numberSigned"
                            android:text="KG" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <ImageView
                    android:id="@+id/infoimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info_mark"
                    app:layout_constraintEnd_toEndOf="@+id/pinkdot"
                    app:layout_constraintStart_toStartOf="@+id/pinkdot"
                    app:layout_constraintTop_toTopOf="@+id/ordertxt" />

                <TextView
                    android:id="@+id/ordertxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="@string/ordertxt"
                    android:textColor="@color/purple"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pinkdot"
                    app:layout_constraintTop_toBottomOf="@+id/fromTime" />


                <Button
                    android:id="@+id/CalculateRates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:padding="@dimen/_16sdp"
                    android:stateListAnimator="@null"
                    android:text="Calculate Rates"
                    android:textAllCaps="false"
                    android:visibility="visible"
                    app:cornerRadius="@dimen/_8sdp"
                    app:elevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/ordertxt" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/processcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:padding="@dimen/_16sdp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/ordertxt">

                    <TextView
                        android:id="@+id/estimatedtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="@string/EstimatedCost"
                        android:textColor="@color/purple"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/estimatedCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="AED 40 "
                        android:textColor="@color/purple"
                        app:layout_constraintEnd_toEndOf="@+id/estimatedtxt"
                        app:layout_constraintStart_toStartOf="@+id/estimatedtxt"
                        app:layout_constraintTop_toBottomOf="@+id/estimatedtxt" />


                    <Button
                        android:id="@+id/process"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_24sdp"
                        android:paddingTop="@dimen/_16sdp"
                        android:paddingEnd="@dimen/_24sdp"
                        android:paddingBottom="@dimen/_16sdp"
                        android:stateListAnimator="@null"
                        android:text="Process"
                        android:textAllCaps="false"
                        app:cornerRadius="@dimen/_8sdp"
                        app:elevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dropOffDaysList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_16sdp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/deliverylin"
                    tools:itemCount="7"
                    tools:listitem="@layout/item_day" />

                <TextView
                    android:id="@+id/dropOffTimeLB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/manrope_medium"
                    android:text="Drop-Off Time "
                    android:textColor="@color/purple"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dropOffDaysList" />

                <TextView
                    android:id="@+id/optional1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_light"
                    android:text="(Optional)"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/dropOffTimeLB"
                    app:layout_constraintStart_toEndOf="@id/dropOffTimeLB"
                    app:layout_constraintTop_toTopOf="@id/dropOffTimeLB" />

                <Button
                    android:id="@+id/fromTime"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:drawableEnd="@drawable/ic_time"
                    android:lines="1"
                    android:padding="@dimen/_16sdp"
                    android:text="Drop-off from time"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:autoSizeTextType="uniform"
                    app:cornerRadius="@dimen/_8sdp"
                    app:layout_constraintEnd_toStartOf="@+id/toTime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dropOffTimeLB" />

                <Button
                    android:id="@+id/toTime"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:drawableEnd="@drawable/ic_time"
                    android:lines="1"
                    android:padding="@dimen/_16sdp"
                    android:text="Drop-off to time"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:autoSizeTextType="uniform"
                    app:cornerRadius="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/fromTime"
                    app:layout_constraintTop_toBottomOf="@id/dropOffTimeLB" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>